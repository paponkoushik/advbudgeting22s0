{% extends 'partials/variables.html.twig' %}

{% set contents = page.header.hero %}

{% block render_block %}
	<section class="hero-section" id="hero-section">
		<div class="hero-wrapper container slide-in">
			<div class="text-contents">
				<div class="hero-content-head">

					{% if contents.h1 != null %}
						<h1 class="hero-title">{{ contents.h1.translatable|raw }}</h1>
					{% endif %}

					{% if contents.text != null %}
						<p>{{ contents.text.translatable|raw }}</p>
					{% endif %}
				</div>

				<div class="hero-buttons">
					{% for button in contents.buttons %}
						<a class="button slide-in {{ button.btn_class }}" href="/{{ grav.language.getActive }}{{ button.link }}">
							{{ button.text.translatable }}
						</a>
					{% endfor %}
				</div>
			</div>

			{% if contents.image %}
				<div class="image-contents">

					<img class="hero-img" src="{{ page.media[contents.image].url }}" alt="Hero Image"/>


					<img src="{{ url('theme://images/hero/cash.png') }}" class="floating cash" alt="Cash Icon"/>
					<img src="{{ url('theme://images/hero/dollar.png') }}" class="floating dollar" alt="Bitcoin Icon"/>
					<img src="{{ url('theme://images/hero/bitcoin.png') }}" class="floating bitcoin" alt="USD Icon"/>
					<img src="{{ url('theme://images/hero/arrow.webp') }}" class="floating arrow" alt="Time Chart"/>

					<div class="left_bottom_wrapper">
						<div class="left_bottom">
							<h2>{{ contents.buttom_left_title.translatable|raw }}</h2>
							<p>{{ contents.buttom_left_text.translatable|raw }}</p>
							<p>{{ contents.buttom_left_text_2.translatable|raw }}</p>
						</div>
					</div>

					<div class="left_bottom_right">
						<div class="bottom_top">
							<svg width="22" height="22" viewbox="0 0 22 22" fill="none" xmlns="http://www.w3.org/2000/svg">
